<Window x:Class="CallProject.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CallProject"
        mc:Ignorable="d"
        Title="MainWindow" Height="309" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Grid.Row="0">
            <TextBlock Text="Введите адрес подключения" FontSize="25" Margin="0 50 0 0"/>
            <TextBox x:Name="ipaddress" Width="350" Height="50" Margin="80 0 0 0"/>
        </StackPanel>

        <Button Content="Начать" Height="50" Grid.Row="1" FontSize="25" Width="200" Click="StartCall"/>
    </Grid>
</Window>
